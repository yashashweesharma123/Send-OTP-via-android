<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/relativeLayoutLogin"
    android:layout_toStartOf="@+id/relativeLayoutLogin"
    android:layout_centerVertical="true">
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp">
        <Button android:id="@+id/button12"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:elevation="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@color/Salad_Green"/>
        <Button
            android:id="@+id/button14"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:elevation="4dp"
            android:layout_marginBottom="5dp"
            android:background="@color/Lava_Red"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
        <Button android:id="@+id/button15"
            android:background="@color/blue"
            android:layout_width="30dp"
            android:elevation="4dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"/>
        <Button android:id="@+id/button16"
            android:background="@color/colorAccent"
            android:layout_width="30dp"
            android:elevation="4dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</RelativeLayout>